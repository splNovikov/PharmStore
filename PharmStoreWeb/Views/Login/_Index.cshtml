<div class="login-form">
	<form name="loginForm">
		<div class="panel panel-primary panel-login">
			<div class="panel-heading">
				<h3 class="panel-title">{{appTitle}}</h3>
			</div>
			<div class="panel-body">
				<div class="big-icon-container">
					<div class="btn btn-primary btn-fab btn-raised" ng-class="{'btn-danger' : invalidAuth, 'btn-primary' : !invalidAuth}">
						<i class="mdi-action-lock" ng-show="!accessInProgress"></i>
						<i class="fa fa-spinner fa-pulse" ng-show="accessInProgress"></i>
					</div>

				</div>
				<div class="form-group">
					<div class=form-control-wrapper>
						<input type="email" class="form-control" placeholder="Логин (e-mail)" ng-model="loginForm.email" ng-required="true">
					</div>
				</div>
				<div class="form-group">
					<div class=form-control-wrapper>
						<input type="password" class="form-control" placeholder="Пароль" ng-model="loginForm.password" ng-required="true" ng-minlength="5"
							   data-hint="Минимум 5 символов">
					</div>
				</div>
			</div>
			<div class="panel-footer">
				<button type="submit"
						class="btn btn-primary btn-lg"
						ng-disabled="!loginForm.$valid"
						ng-click="login()">
					Войти
				</button>
			</div>
		</div>
	</form>
</div>

<script>
	$(document).ready(function () {
		$.material.ripples();
		$.material.input();
	})
</script>