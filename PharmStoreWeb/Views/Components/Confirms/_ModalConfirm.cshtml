<div>
	<div class="modal-header">
		<button type="button" ng-click="cancel()" class="close" data-dismiss="modal" aria-hidden="true">×</button>
		<h4 class="modal-title">{{ title }}</h4>
	</div>
	<div class="modal-body" ng-if="template" ng-bind-html="template"></div>
	<div class="modal-footer">
		<button type="button" ng-click="ok()" class="btn btn-primary">Да</button>
		<button type="button" ng-click="cancel()" class="btn btn-default" data-dismiss="modal">Отменить</button>
	</div>
</div>